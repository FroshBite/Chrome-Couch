{
  // Required

  "manifest_version": 2, // LEAVE THIS AS IT IS
  "name": "Chrome Couch",
  "version": "0.1",

  // Recommended

  "description": "Browse the web from the web, with a gamepad and Chrome Couch!",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },

  // Pick one (or none)

  "browser_action": {
      "default_title": "Chrome Couch",
      "default_icon": "icon48.png",
      "default_popup": "toggle.html"
  },

  // Optional
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [ {
      "css": ["main.css"],
      "js": [ "main.js", "keyboard_script.js" ],
      "matches": [ "<all_urls>"],
      "run_at": "document_end",
      "all_frames": true
   } ],

   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

   "permissions": [ "activeTab","tabs","<all_urls>" ],

   "options_page": "options.html",

   "web_accessible_resources": [
    "controls.js", 
    "keyboard.html",
    "keyboards/keyboard_*.html",
    "keyboards/keyboard_en.html",
    "keyboards/keyboard_ru.html",
    "keyboard_style.css",
    "options.js",
    "toggle.html",
    "toggle.js",
    "icons/*",
  "icons/backspace.png",
  "icons/backspace-e.png",
  "icons/close.png",
  "icons/enter.png",
  "icons/enter-e.png",
  "icons/settings.png",
  "icons/shift.png",
    "buttons/*",
    "buttons/keyboard_1.png",
    "buttons/keyboard_2.png",
    "buttons/keyboard_3.png"
  ]
}